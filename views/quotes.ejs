                    </li>
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" href="/resources">Resources</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" href="/jokes">Jokes</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" style="--bs-link-hover-color-rgb: 25, 135, 84;" aria-current="page"
                            href="/quotes">Quotes</a>
                    </li>
                </ul>
                <form class="d-flex" role="search">
                    <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                    <button class="btn btn-outline-success" type="submit">Search</button>
                </form>
            </div>
        </div>
    </nav>

    <div class="container mt-5 text-center">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <div class="joke-generator">
                    <h1 class="text-center mb-4">Quotes Generator</h1>
                    
                    <% if (locals.quot) { %>
                        <div class="joke-text" id="joke"><%= quot %></div>
                    <%} else {%>
                    <div class="joke-text" id="joke">Strive for progress, not perfection.</div>
                    <%}%>
                    
                    
                        
                    <form action="/quotes" method="post">
                    <button id="generateButton" class="btn  btn-block text-center">Generate Quote</button>
                    </form> 

                

                </div>
            </div>
        </div>
    </div>

